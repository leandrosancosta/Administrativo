@model WApp.Service.Controllers.FinanceiroView

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nova Despesa</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2 col-sm-12" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control", id = "dataCompra" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control col-12"} })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control col-12"} })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


@section scripts{
    <script type="text/javascript">
        var now = new Date();
        var month = now.getMonth() + 1 <= 9 ? '0' + (now.getMonth() + 1) : (now.getMonth() + 1);
        var today = now.getFullYear() + '-' + month + '-' + now.getDate();
        $("#dataCompra").val(today)
    </script>
}