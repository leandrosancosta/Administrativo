@model WApp.Service.Models.FinanceiroView

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nova Despesa</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-row">
            <div class="form-group col-sm-12 col-md-12">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "col-md-1 col-sm-12" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control", id = "dataCompra" } })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-md-2 col-sm-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "col-md-4 col-sm-12" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.CategoriaId, htmlAttributes: new { @class = "col-md-2 col-sm-12" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })*@
                    <select class="form-control">
                        <option>1</option>
                        <option>2</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.StatusId, htmlAttributes: new { @class = "col-md-2 col-sm-12" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })*@
                    <select class="form-control">
                        <option>1</option>
                        <option>2</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.CobrancaId, htmlAttributes: new { @class = "col-md-2 col-sm-12" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })*@
                    <select class="form-control">
                        <option>1</option>
                        <option>2</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.CobrancaId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script type="text/javascript">
        var now = new Date();
        var month = now.getMonth() + 1 <= 9 ? '0' + (now.getMonth() + 1) : (now.getMonth() + 1);
        var today = now.getFullYear() + '-' + month + '-' + now.getDate();
        $("#dataCompra").val(today)
    </script>
}