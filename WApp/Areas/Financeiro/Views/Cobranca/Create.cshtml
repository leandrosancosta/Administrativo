@model WApp.Service.Models.Cobranca

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo tipo de Cobrança</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-row">
            <div class="col-md-8">
                @Html.LabelFor(model => model.Nome)
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.Status)
                @Html.DropDownList("Status", new SelectList(ViewBag.Status, "Value", "Text", "0"), htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(model => model.TipoCobranca)
                @Html.DropDownList("Tipo", new SelectList(ViewBag.Tipo, "Value", "Text", "0"), htmlAttributes: new { @class = "form-control", id = "cobrancaTipo" })
            </div>
        </div>

        <div id="divCredit" class="form-row d-none">
            <div class="col-md-6">
                @Html.LabelFor(model => model.DataCobranca)
                @Html.EditorFor(model => model.DataCobranca, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.DataFatura)
                @Html.EditorFor(model => model.DataFatura, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-12 form-buttons">
            <button type="submit" class="btn btn-success">Salvar</button>
            @Html.ActionLink("Voltar", "Index", new { controller = "Cobranca" }, new { @class = "btn btn-default" })
        </div>

    </div>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#cobrancaTipo").change(function (ev) {
                let selected = ev.target.options.selectedIndex;
                if (selected == 1) {
                    $("#divCredit").removeClass("d-none");
                } else if (selected == 0) {
                    $("#divCredit").addClass("d-none");
                }
            })
        })
    </script>
    }