@model Service.Areas.Financeiro.Models.CategoriaView

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-row">
            <div class="form-group col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.List, "Value", "Text"), new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-12 form-buttons">
            <button type="submit" class="btn btn-success">Salvar</button>
            @Html.ActionLink("Voltar", "index", new { controller = "categoria" }, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    </div>

}