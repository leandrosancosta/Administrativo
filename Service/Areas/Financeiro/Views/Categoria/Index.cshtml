@model IEnumerable<Core.Financeiro.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(c => c.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Status)
            </th>
            <th>
                Opções
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    @if (item.Status == 1)
                    {
                        <td>
                            Ativo
                        </td>
                    }
                    else
                    {
                        <td>
                            Inativo
                        </td>
                    }
                    <td></td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="3">
                    <p>Não há items para mostrar</p>
                </td>
            </tr>
        }
    </tbody>
</table>